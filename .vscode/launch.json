    "version": "0.2.0",
    "configurations": [


{
     "name": "Launch on iOS",
        "type": "nativescript",
        "request": "launch",
        "platform": "ios",
        "appRoot": "${workspaceRoot}",
        "sourceMaps": true,
        "watch": true,
        "tnsArgs": [
            "--debug",
            "--bundle"
        ]
    },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}